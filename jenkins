pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git url: 'https://github.com/raghul2904/Trend1.git', branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t raghul2904/trend-app:latest .'
            }
        }

        stage('Push to DockerHub') {
            steps {
               sh '''
                    docker login -u raghul2904 -p dckr_pat_u35hSs8KYi8IEJ8X7sF7ou1Ci_I
                    docker push raghul2904/trend-app:latest
                    '''
                }
            }

        stage('K8S Deploy') {
         steps{
            script {
               withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'AWS']]) {
	           aws eks update-kubeconfig --region us-east-1 --name --demo		
               sh 'kubectl apply -f  eks-deploy-k8s.yaml'

            }
        }
    }
}
